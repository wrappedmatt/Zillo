<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.stripe.aod.sampleapp.fragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
    </fragment>
    <fragment
        android:id="@+id/receiptFragment"
        android:name="com.stripe.aod.sampleapp.fragment.ReceiptFragment"
        android:label="ReceiptFragment" >
        <action
            android:id="@+id/action_receiptFragment_to_emailFragment"
            app:destination="@id/emailFragment" />
        <argument
            android:name="amount"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="paymentIntentID"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.stripe.aod.sampleapp.fragment.InputFragment"
        android:label="InputFragment">
        <action
            android:id="@+id/action_inputFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_inputFragment_to_receiptFragment"
            app:destination="@id/receiptFragment" />
        <action
            android:id="@+id/action_inputFragment_to_loyaltyPointsFragment"
            app:destination="@id/loyaltyPointsFragment" />
        <action
            android:id="@+id/action_inputFragment_to_redemptionFragment"
            app:destination="@id/redemptionFragment" />
        <argument
            android:name="amount"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="paymentIntentID"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
    <fragment
        android:id="@+id/emailFragment"
        android:name="com.stripe.aod.sampleapp.fragment.EmailFragment"
        android:label="EmailFragment" >
        <action
            android:id="@+id/action_emailFragment_to_receiptFragment"
            app:destination="@id/receiptFragment" />
        <argument
            android:name="paymentIntentID"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/loyaltyPointsFragment"
        android:name="com.stripe.aod.sampleapp.fragment.LoyaltyPointsFragment"
        android:label="LoyaltyPointsFragment" >
        <action
            android:id="@+id/action_loyaltyPointsFragment_to_qrCodeFragment"
            app:destination="@id/qrCodeFragment" />
        <argument
            android:name="amount"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="paymentIntentId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
    <fragment
        android:id="@+id/redemptionFragment"
        android:name="com.stripe.aod.sampleapp.fragment.RedemptionFragment"
        android:label="RedemptionFragment" >
        <action
            android:id="@+id/action_redemptionFragment_to_loyaltyPointsFragment"
            app:destination="@id/loyaltyPointsFragment" />
        <action
            android:id="@+id/action_redemptionFragment_to_qrCodeFragment"
            app:destination="@id/qrCodeFragment" />
        <argument
            android:name="amount"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="customerId"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="creditAvailable"
            app:argType="float"
            android:defaultValue="0.0" />
    </fragment>
    <fragment
        android:id="@+id/qrCodeFragment"
        android:name="com.stripe.aod.sampleapp.fragment.QRCodeFragment"
        android:label="QRCodeFragment">
        <argument
            android:name="signupUrl"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="unclaimedPoints"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>