<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Headline -->
        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="You have credit available"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"/>

        <!-- Transaction Amount -->
        <TextView
            android:id="@+id/transaction_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headline"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Transaction Amount"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"/>

        <TextView
            android:id="@+id/order_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transaction_label"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="50.00"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"/>

        <!-- Available Credit -->
        <TextView
            android:id="@+id/credit_available_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_amount"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Available Credit"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"/>

        <TextView
            android:id="@+id/credit_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/credit_available_label"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="5.00"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"/>

        <!-- Use Credit Button -->
        <TextView
            android:id="@+id/redeem_button"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dismiss_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Use Credit"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Skip Button -->
        <TextView
            android:id="@+id/dismiss_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Skip"
            android:textSize="18sp"
            android:textColor="@color/selector_btn_secondary_text"
            android:gravity="center"
            android:background="@drawable/selector_secondary_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
